<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage - Transport Calculator</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>

    <nav>
      <img class="nav-logo" src="/images/WeMat_Logo.png" alt="company_logo " />
      {{! <ul class="nav-list">
        <li><a href="#">Home</a></li>
        <li><a href="#">Add</a></li>
        <li><a href="#">Edit</a></li>
      </ul> }}
      <button id="log-out-btn" class="log-btn">Log-out</button>
    </nav>

    <main class="home-container">
      <h1 class="home-greet">Welcome!</h1>
      <h2 class="home-greet">What do you want to do today?</h2>

      <div class="button-container">
        <div class="btn-container">
          <button class="home-btn" id="add-btn">➕</button>
          <p class="home-text" id="btn-text">Add Data</p>
        </div>

        <div class="btn-container">
          <button class="home-btn" id="edit-btn">✏️</button>
          <p class="home-text" id="btn-text">Edit Data</p></div>

        <div class="btn-container" id="form-view">
          <button class="home-btn" id="view-btn">👁️</button>
          <p class="home-text" id="btn-text">View</p>
        </div>

        <div class="btn-container">
          <button class="home-btn" id="calc-btn">🚚%</button>
          <p class="home-text" id="btn-text">Calculator</p>
        </div>

      </div>

    </main>
    <script src="/redirect.js"></script>
    <script src="/log-out.js"></script>

  </body>
</html>