<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/logo-white.png" />
    <title>Login - Transport Calculator</title>
    <link rel="stylesheet" href=" /style.css" />
  </head>
  <body>
    <header>
      <img class="logo" src="/images/logo-black.png" alt="company_logo" />
      <h1 class="register-title">Login</h1>
    </header>
  <div class="container">
      <form action="/login" method="POST" class="register-form">
        <div class="input-container">
          <label for="email">Email Address:</label>
          <input
            type="email"
            class="form-input"
            id="email"
            name="email"
          /></div>
        <div class="input-container">
          <label for="password">Password:</label>
          <input
            type="password"
            class="form-input"
            id="password"
            name="password"
          /></div>

        <button class="register-btn" type="submit" id="login-btn">Login</button>
        <a href="/register">You don't have an account? Register here!</a>
        {{#if message}}
<h4 class="alert alert-danger">{{message}}</h4>
  {{/if}}
      </form>
     </div>
      
    </div>
  </body>
</html>